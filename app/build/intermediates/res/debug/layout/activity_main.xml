<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/LightBlue" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.scrumboard.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_main_to_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/showBoard" />

        <Button
            android:id="@+id/button_main_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_button" />

        <Button
            android:id="@+id/button_main_to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registration_button" />

        <Button
            android:id="@+id/button_main_to_add_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addProject" />
    </LinearLayout>

